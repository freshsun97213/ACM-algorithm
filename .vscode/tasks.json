{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\path\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
